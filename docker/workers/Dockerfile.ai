# AI SEO OS - AI Inference Worker
# Handles: LLM calls, embeddings, agent reasoning

FROM node:20-alpine AS base

# Install dependencies
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* pnpm-lock.yaml* ./
RUN \
  if [ -f pnpm-lock.yaml ]; then corepack enable pnpm && pnpm i --frozen-lockfile; \
  elif [ -f package-lock.json ]; then npm ci; \
  else npm i; \
  fi

# Builder stage
FROM base AS builder

COPY . .
RUN npm run build:workers

# Production stage
FROM node:20-alpine AS runner

WORKDIR /app

ENV NODE_ENV=production

# Create non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 aiworker

# Copy built application
COPY --from=builder --chown=aiworker:nodejs /app/dist/workers ./
COPY --from=builder --chown=aiworker:nodejs /app/node_modules ./node_modules
COPY --from=builder --chown=aiworker:nodejs /app/package.json ./package.json

USER aiworker

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD node healthcheck.js || exit 1

# Start the AI worker
CMD ["node", "ai-worker.js"]
